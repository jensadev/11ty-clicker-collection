---
layout: base.njk
title: Clicker samling
---
{% set url  = "" %}
{% for class in clickers %}
<h2>{{ class.class }}</h2>
<div class="card-group">
    {% for clicker in class.clickers | randomize %}
    {% set url = ["./src/previews/", clicker.image] | join %}
    <div class="card">
        {% image url, "test" %}
        <div class="card__content">
            <h3 class="card__title">
                <a href="{{ clicker.url | safe }}" target="_blank">{{ clicker.title }}</a>
            </h3>
            {% if clicker.author %}
                <p>Kodad av: {{ clicker.author }}</p>
            {% endif %}
            {% if clicker.tagline %}
                <p>{{ clicker.tagline }}</p>
            {% endif %}
            {% if clicker.git %}
                <p>Koden p√• <a href="{{ clicker.git | safe}}">Git</a></p>
            {% endif %}
        </div>
    </div>
    {% endfor %}
</div>
{% endfor %}